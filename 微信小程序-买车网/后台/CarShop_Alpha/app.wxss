/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.modal{
  background-color: #1c1c1c;
  opacity: .6;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  height: 100%;
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  background-color: #f8f8f8;
} 

.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker{
  
}
.citybody {
  position: fixed;
  bottom: 0px;
  background-color: white;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  font-size: 15px;
  font-family:"Microsoft YaHei";
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
  margin-left: 20rpx;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E;
  margin-right: 20rpx;
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}